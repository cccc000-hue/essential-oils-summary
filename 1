    <!-- JavaScript 設定區：你要修改連結就在這裡！ -->
    <script>
        // ==========================================
        // CONFIGURATION 設定區
        // ==========================================
        
        // 在這裡定義你的頁面。
        // file: 檔案名稱 (例如 '1.html', 'index1.html')
        // title: 顯示在卡片上的大標題
        // desc: 卡片上的小描述
        const pages = [
            { 
                file: 'index1.html', 
                title: '備用首頁 / 測試頁', 
                desc: '查看之前的 Index1 版本' 
            },
            { 
                file: '1.html', 
                title: '第 1 章', 
                desc: '點擊進入第一部分內容' 
            },
            { 
                file: '2.html', 
                title: '第 2 章', 
                desc: '點擊進入第二部分內容' 
            },
            { 
                file: '3.html', 
                title: '第 3 章', 
                desc: '點擊進入第三部分內容' 
            },
            // 如果你有更多頁面，複製下面這行並修改數字即可：
            // { file: '4.html', title: '第 4 章', desc: '更多內容...' },
        ];

        // ==========================================
        // 程式邏輯 (不需要修改)
        // ==========================================
        const container = document.getElementById('link-grid');

        pages.forEach(page => {
            // 檢查檔案連結是否為空，如果是空則不產生連結
            const linkHtml = `
                <a href="${page.file}" class="block bg-white rounded-xl shadow-sm border border-gray-100 p-6 transition-all duration-300 card-hover group">
                    <div class="flex items-center justify-between mb-3">
                        <span class="bg-green-100 text-green-700 text-xs font-bold px-2 py-1 rounded uppercase">File</span>
                        <svg class="w-5 h-5 text-gray-300 group-hover:text-green-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-bold text-gray-800 group-hover:text-green-600 transition-colors">${page.title}</h3>
                    <p class="text-gray-500 text-sm mt-2">${page.desc}</p>
                    <div class="mt-4 text-xs text-gray-400 font-mono bg-gray-50 inline-block px-2 py-1 rounded">
                        ${page.file}
                    </div>
                </a>
            `;
            container.innerHTML += linkHtml;
        });
    </script>
